extends ../layout/index

block contenido 

    div.py-10 
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-6xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores   
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p2.mb-1.font-bold= error.msg


        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/olvidepassword")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-4.font-bold(for="correo") Tu Correo
                        input#email.w-full.px-4.py-2.border.gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Correo", type="email", name="email")
                    .flex.items-center.justify-between 
                        a.text-gray-500.text-xs(href="/auth/registro") No tienes una cuenta? Crea Una
                        a.text-gray-500.text-xs(href="/auth/login") Iniciar Sesi√≥n
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Enviar Correo")